{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.6",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "Image",
              "url": "data:image/png;base64,",
              "backgroundColor": "${lineColour}",
              "altText": "Line colour"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "${lineName}",
              "size": "large",
              "wrap": true,
              "style": "heading"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "Image",
              "url": "${modeIconUrl}",
              "altText": "Mode of transport"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "Image",
              "url": "data:image/png;base64,",
              "backgroundColor": "${statusColour}"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "${status}",
              "size": "medium",
              "wrap": true,
              "style": "heading"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "separator": true,
      "spacing": "medium",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "üöß Disruption(s): ${reason}",
              "size": "small",
              "isSubtle": true,
              "spacing": "small",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "‚è±Ô∏è Retrieved: ${retrievedDate}",
              "size": "small",
              "isSubtle": true,
              "spacing": "small",
              "wrap": true
            }
          ]
        }
      ]
    }
  ]
}